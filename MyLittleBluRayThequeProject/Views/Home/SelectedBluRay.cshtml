@model IndexViewModel
@{
    ViewData["Title"] = "Selected BluRay Page";

}
<div class="text-center">
    <div>
    titre : @Model.SelectedBluRay.Titre
    </div>
    <div>
        Acteurs : @foreach (var act in Model.SelectedBluRay.Acteurs ?? new List<MyLittleBluRayThequeProject.DTOs.Personne>())
        {
            <div>nom :  @act.Nom</div>
            <div>prenom :  @act.Prenom</div>
        }
    </div>
    <div>
    Date de sortie : @Model.SelectedBluRay.DateSortie?.ToShortDateString()
    </div>
    <div>
    Réalisateur : @Model.SelectedBluRay.Realisateur?.Nom - @Model.SelectedBluRay.Realisateur?.Prenom
    </div>

</div> 