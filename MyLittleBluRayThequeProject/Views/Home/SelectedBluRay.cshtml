@model IndexViewModel
@{
    ViewData["Title"] = "Selected BluRay Page";
}
<div class="text-center">
    <div>
    <h4>Titre : </h4> @Model.SelectedBluRay.Titre
    </div>
    <div>
    <h4>Scénariste : </h4> @Model.SelectedBluRay.Scenariste.Nom @Model.SelectedBluRay.Scenariste.Prenom
    </div>
    <div>
    <h4>Réalistateur : </h4> @Model.SelectedBluRay.Realisateur.Nom @Model.SelectedBluRay.Realisateur.Prenom
    </div>
    <div>
        <h4>Acteurs :</h4> @foreach (var act in Model.SelectedBluRay.Acteurs)
        {
            <div>nom :  @act.Nom</div>
            <div>prenom :  @act.Prenom</div>
        }
    </div>
    <div>
    <h4>Duree :</h4> @Model.SelectedBluRay.Duree.ToString()
    </div>
    <div>
    <h4>Date de sortie :</h4> @Model.SelectedBluRay.DateSortie?.ToShortDateString()
    </div>
    <div>
        <h4>Langues : </h4>@foreach (var lg in Model.SelectedBluRay.Langues)
        {
            <div>@lg</div>
        }
    </div>
    <div>
        <h4>Sous Titre : </h4>@foreach (var st in Model.SelectedBluRay.SsTitres)
        {
            <div>@st</div>
        }
    </div>
    <div>
    <h4>Version : </h4>@Model.SelectedBluRay.Version
    </div>

    <div>
        <form method="post" asp-controller="Home" asp-action="Index" asp-route-id="@Model.SelectedBluRay.Id">
            <input type="submit" value="Supprimer" />
        </form>
    </div>

    <div>
        <form method="post" asp-controller="Home" asp-action="Index">
            <input type="submit" value="Retour" />
        </form>
    </div>
</div> 