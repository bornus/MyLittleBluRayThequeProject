@model IndexViewModel
@{
    ViewData["Title"] = "Selected BluRay Page";

}
<div class="text-center">
    <div>
    titre : @Model.SelectedBluRay.Titre
    </div>
    <div>
    Scenariste : @Model.SelectedBluRay.Scenariste
    </div>
    <div>
    Realisateur : @Model.SelectedBluRay.Realisateur
    </div>
    <div>
        Acteurs : @foreach (var act in Model.SelectedBluRay.Acteurs)
        {
            <div>nom :  @act.Nom</div>
            <div>prenom :  @act.Prenom</div>
        }
    </div>
    <div>
    Duree : @Model.SelectedBluRay.Duree.ToString()
    </div>
    <div>
    Date de sortie : @Model.SelectedBluRay.DateSortie.ToShortDateString()
    </div>
    <div>
        Langues : @foreach (var lg in Model.SelectedBluRay.Langues)
        {
            <div>@lg</div>
        }
    </div>
    <div>
        Sous Titre : @foreach (var st in Model.SelectedBluRay.SsTitres)
        {
            <div>@st</div>
        }
    </div>
    <div>
    Version : @Model.SelectedBluRay.Version

    </div>

</div> 